<%- include('./partials/head.ejs') -%>
<%- include('./partials/nav.ejs') -%>

<div class="dash-container" style="background-color: rgba(24, 10, 150, 0.863); width: 100vw; height:100vh; display: flex; flex-direction: column;">
    <div class="greetings" style="background-color: white;" >
        <h3>Hello, <%- `${user}`-%>!</h3> <!--change variable for the name-->
    </div>
    <div class="revenue-container" style="background-color: aqua; display: flex; flex-direction: row;">
        <div class="revenue" id="user-revenue" style="background-color: purple;">
            <h5>Your POS Revenue:</h5>
            <h3><%-`${userRevenue}`-%></h3>
        </div>
        <div class="revenue" id="all-revenue" style="background-color: green;">
            <h5>Overall POS Revenue:</h5>
            <h3><%-`${allRevenue}`-%></h3>
        </div>
    </div>
    <div class="chart-container" style="display: flex; flex-direction: row;">
        <canvas id="movie1Chart" style="width:100%; max-width: 20vw; height: 100%; max-height: 50vh;"></canvas>
        <canvas id="movie2Chart" style="width:100%; max-width: 20vw; height: 100%; max-height: 50vh;"></canvas>
        <canvas id="movie3Chart" style="width:100%; max-width: 20vw; height: 100%; max-height: 50vh;"></canvas>
        <canvas id="movie4Chart" style="width:100%; max-width: 20vw; height: 100%; max-height: 50vh;"></canvas>
    </div>
</div>
