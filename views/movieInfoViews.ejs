<%- include("./partials/head.ejs")-%>
<%- include("./partials/nav.ejs")-%>
<div class="movie-container">
  <div class="card mb-3" style="max-width: 80vw;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="<%- `${cImage}` -%>" class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">Cinema 1 | <%- `${cTitle}` -%></h5>
          <h6 class="movie-rating"><ion-icon name="star-outline"></ion-icon><%- `${cRating}` -%> | <%- `${cGenre}` -%></h6>
          <p class="card-text"><%- `${cPlot}` -%></p>
          <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
        </div>
      </div>
    </div>
  </div>

</div>

